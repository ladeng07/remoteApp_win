<Window x:Class="remoteApp_win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:remoteApp_win"
        mc:Ignorable="d"
        Title="云应用分发器Demo" Height="450" Width="800" Icon="/logo.png">
    <Grid AllowDrop="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OpenDesktopButton" Content="打开桌面" Click="OpenDesktopButton_Click" Width="100" Height="50" Margin="20,0,20,0"/>
            <Button Name="OpenFileButton" Content="选择安装位置" Click="OpenDesktopButton_Click" Width="100" Height="50" Margin="20,0,20,0"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#FFA49F9F" BorderThickness="1" CornerRadius="5" Margin="10,10,10,10">
            <WrapPanel  AllowDrop="True" DragEnter="WrapPanel_DragEnter" Drop="WrapPanel_Drop" Background="Green">
                <!-- 你的内容 -->
            </WrapPanel>
        </Border>
    </Grid>
</Window>
